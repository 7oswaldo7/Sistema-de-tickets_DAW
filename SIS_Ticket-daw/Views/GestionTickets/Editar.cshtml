@model GestionTicketsDB.Models.tickets

@{
    ViewData["Title"] = "Editar Ticket";
}

<h2>Editar Ticket - @Model.titulo</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="id_ticket" />

    <div class="form-group">
        <label asp-for="descripcion">Descripción</label>
        <textarea asp-for="descripcion" class="form-control" rows="5"></textarea>
    </div>

    <div class="form-group">
        <label for="id_estado_ticket">Estado</label>
        <select asp-for="id_estado_ticket" asp-items="@(new SelectList(ViewBag.Estados, "id_estado_ticket", "estado"))" class="form-control">
            <option value="">-- Selecciona un estado --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
