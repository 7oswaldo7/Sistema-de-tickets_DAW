@model GestionTicketsDB.Models.usuarios

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<h2>@ViewData["Title"]</h2>

<h3>¿Está seguro que desea eliminar este usuario?</h3>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.nombre</dd>

        <dt class="col-sm-2">Correo Electrónico</dt>
        <dd class="col-sm-10">@Model.correo_electronico</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="id_usuario" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
